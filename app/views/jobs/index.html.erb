<span class="pull-right">
  <div class="btn-group">
    <div class="col-md-4">
      <button type = "button" class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
        排序<span class="caret"></span></button>
          <ul class="dropdown-menu" role="menu">
            <li> <%= link_to("按照职缺薪资下限排序", jobs_path(:order => "by_lower_bound")) %> </li>
            <li> <%= link_to("按照职缺薪资上限排序", jobs_path(:order => "by_upper_bound")) %> </li>
            <li> <%= link_to("按照职缺发表时间排序", jobs_path) %> </li>
          </ul>
     </div>
     <div class="col-md-4">
        <%= link_to("添加工作", new_job_path, :class => "btn btn-primary" ) %>
     </div>
    </div>
</span>

<table class="table table-boldered">
  <thead>
        <tr>
            <td>
                职缺
            </td>
            <td>
                管理选项
            </td>
            <td>
                刊登时间
            </td>
        </tr>
    </thead>
  <tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
     <%= link_to("Edit", edit_job_path(job)) %> |
     <%= link_to("Destroy", job_path(job), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
   </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
