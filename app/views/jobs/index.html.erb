<div class="pull-right">
  <%= link_to("Add a job", new_job_path, :class => "btn btn-default" ) %>
  <li class="dropdown">
     <a href="#" class="dropdown-toggle" data-toggle="dropdown"> 排序 <b class="caret"></b> </a>
     <ul class="dropdown-menu">
         <li> <%= link_to("按照职缺薪资下限排序", ) %> </li>
         <li> <%= link_to("按照职缺薪资上限排序", ) %> </li>
         <li> <%= link_to("按照职缺发表时间排序", ) %> </li>
     </ul>
   </li>
</div>
<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
     <%= link_to("Edit", edit_job_path(job)) %> |
     <%= link_to("Destroy", job_path(job), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
   </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
